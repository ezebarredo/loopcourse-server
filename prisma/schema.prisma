model Level {
  // 1 to many Sublevels
  id        Int        @id @default(autoincrement())
  title     String
  subLevels SubLevel[]
}

model SubLevel {
  // 1 Sublevel to many Card
  id       Int       @id @default(autoincrement())
  title    String
  audio    String
  level    Level     @relation(fields: [levelId], references: [id])
  levelId  Int
  cards    Card[]
  question Question?
}

model Card {
  id         Int      @id @default(autoincrement())
  front      String
  back       String
  image      String
  subLevel   SubLevel @relation(fields: [subLevelId], references: [id])
  subLevelId Int
}

model Answer {
  id         Int      @id @default(autoincrement())
  answer     String
  question   Question @relation(fields: [questionId], references: [id])
  questionId Int
}

model Question {
  id                Int      @id @default(autoincrement())
  title             String
  correctAnswer     String
  answeredCorrectly Boolean
  gramarLevel       String
  userAnswer        String?
  answers           Answer[]
  subLevel          SubLevel @relation(fields: [subLevelId], references: [id])
  subLevelId        Int      @unique
}

