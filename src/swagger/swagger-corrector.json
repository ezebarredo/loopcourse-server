{
  "openapi": "3.0.0",
  "info": {
    "title": "Loop Course: API Reference",
    "version": "1.0.0",
    "description": "CRUD API for Levels, Sublevels, Cards, Questions, Answers and Audio",
    "contact": {
      "name": "Eze Barredo"
    }
  },
  "servers": [
    {
      "url": "http://localhost:4000"
    }
  ],
  "paths": {
    "/api/levels": {
      "get": {
        "summary": "Get Levels",
        "description": "This endpoint retrieves a list of all levels.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "getAllLevels": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "title": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "example": {
                  "getAllLevels": [
                    {
                      "id": 1,
                      "title": "Level 1"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/api/levels/{levelId}/sublevels": {
      "get": {
        "summary": "Get sublevels by level ID",
        "description": "Retrieves Sublevels by Level ID.",
        "parameters": [
          {
            "name": "levelId",
            "in": "path",
            "description": "ID of the requested level",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "levelId": {
                      "type": "integer"
                    },
                    "sublevels": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "title": {
                            "type": "string"
                          },
                          "audio": {
                            "type": "string"
                          },
                          "levelId": {
                            "type": "integer"
                          }
                        }
                      }
                    }
                  }
                },
                "example": {
                  "getAllSublevels": {
                    "id": 1,
                    "title": "Level 1",
                    "subLevels": [
                      {
                        "id": 1,
                        "title": "Subject Pronouns",
                        "audio": "audio_level_1.mp4",
                        "levelId": 1
                      }
                    ]
                  }
                }
              }
            }
          },
          "404": {
            "description": "Level not found"
          }
        }
      }
    },
    "/api/sublevels/{sublevelId}/cards": {
      "get": {
        "summary": "Get cards by sublevel ID",
        "description": "Retrieves Cards by Sublevel ID.",
        "parameters": [
          {
            "name": "sublevelId",
            "in": "path",
            "description": "ID of the requested sublevel",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "subLevelId": {
                      "type": "integer"
                    },
                    "getAllCards": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "front": {
                            "type": "string"
                          },
                          "back": {
                            "type": "string"
                          },
                          "image": {
                            "type": "string"
                          },
                          "subLevelId": {
                            "type": "integer"
                          }
                        }
                      }
                    }
                  }
                },
                "example": {
                  "getAllCards": [
                    {
                      "id": 1,
                      "front": "do widzenia",
                      "back": "See you!",
                      "image": "/excited.jpg",
                      "subLevelId": 1
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Sublevel not found"
          }
        }
      }
    },
    "/api/sub-levels/{questionId}": {
      "get": {
        "summary": "Get question with it answers by question ID",
        "description": "Retrieves Questions and it Answers by questionId",
        "parameters": [
          {
            "name": "questionId",
            "in": "path",
            "description": "ID of the requested Question",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "questionId": {
                      "type": "integer"
                    },
                    "getQuestion": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "title": {
                            "type": "string"
                          },
                          "correctAnswer": {
                            "type": "string"
                          },
                          "answeredCorrectly": {
                            "type": "string"
                          },
                          "gramarLevel": {
                            "type": "string"
                          },
                          "userAnswer": {
                            "type": "string"
                          },
                          "subLevelId": {
                            "type": "integer"
                          },
                          "answers": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "id": {
                                  "type": "integer"
                                },
                                "answer": {
                                  "type": "string"
                                },
                                "questionId": {
                                  "type": "integer"
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/levels/{levelId}": {
      "patch": {
        "summary": "Update a Level Title",
        "description": "Updates a specific level identified by its ID.",
        "parameters": [
          {
            "name": "levelId",
            "in": "path",
            "description": "ID of the requested level",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "The updated title of the level."
                  }
                },
                "required": ["title"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Level updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "description": "The ID of the updated level."
                    },
                    "title": {
                      "type": "string",
                      "description": "The updated title of the level."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid patch data)"
          },
          "404": {
            "description": "Level not found"
          }
        }
      }
    },
    "/api/levels/{levelId}/sublevels/{sublevelId}": {
      "patch": {
        "summary": "Update Sublevel, audio and question title",
        "description": "Updates a specific sublevel identified by its ID.",
        "parameters": [
          {
            "name": "levelId",
            "in": "path",
            "description": "ID of the requested level",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "sublevelId",
            "in": "path",
            "description": "ID of the requested sublevel",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "The updated title of the sublevel."
                  },
                  "audio": {
                    "type": "string",
                    "description": "The updated audio title of the sublevel."
                  },
                  "question": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string",
                        "description": "The title of the question."
                      }
                    },
                    "description": "The question related to the sublevel."
                  }
                },
                "required": ["title", "audio", "question"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sublevel updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "description": "The ID of the updated sublevel."
                    },
                    "title": {
                      "type": "string",
                      "description": "The updated title of the sublevel."
                    },
                    "audio": {
                      "type": "string",
                      "description": "The updated audio title of the sublevel."
                    },
                    "question": {
                      "type": "object",
                      "properties": {
                        "title": {
                          "type": "string",
                          "description": "The title of the question."
                        }
                      },
                      "description": "The question related to the sublevel."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid patch data)"
          },
          "404": {
            "description": "Sublevel not found"
          }
        }
      }
    },
    "/api/answers/{answerId}": {
      "patch": {
        "summary": "Update a Answer Title",
        "description": "Updates a specific answer identified by its ID.",
        "parameters": [
          {
            "name": "answerId",
            "in": "path",
            "description": "ID of the requested answer",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "answer": {
                    "type": "string",
                    "description": "The updated title of the answer"
                  }
                },
                "required": ["answer"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Answer title updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "description": "The ID of the updated answer"
                    },
                    "answer": {
                      "type": "string",
                      "description": "The updated title of the answer"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid patch data)"
          },
          "404": {
            "description": "Answer not found"
          }
        }
      }
    }
  }
}
